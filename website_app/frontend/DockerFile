# ---------- build the React bundle ----------
FROM node:20-alpine AS build
WORKDIR /src
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build                 

# ---------- lightweight Nginx image  ----------
FROM nginx:alpine
# Copy build artefacts to Nginx html root
COPY --from=build /src/dist /usr/share/nginx/html
#   └── change to /src/build if you use CRA

# Config: forward all requests to index.html
RUN printf 'server { \
  listen 80; \
  location / { try_files $uri /index.html; } \
  } ' > /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]